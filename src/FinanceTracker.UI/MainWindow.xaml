<Window x:Class="FinanceTracker.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinanceTracker.App"
        mc:Ignorable="d"
        Title="Finance Tracker" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Summary Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Financial Summary" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Total Income:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock x:Name="TotalIncomeText" Text="$0.00" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock Text="Total Expenses:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock x:Name="TotalExpensesText" Text="$0.00" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock Text="Net Income:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock x:Name="NetIncomeText" Text="$0.00" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Transactions Tabs -->
        <TabControl Grid.Row="1" Margin="0,0,0,10">
            <TabItem Header="Income">
                <DataGrid x:Name="IncomeGrid" 
                        AutoGenerateColumns="False" 
                        IsReadOnly="True"
                        SelectionMode="Single"
                        SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="100"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Expenses">
                <DataGrid x:Name="ExpensesGrid" 
                        AutoGenerateColumns="False" 
                        IsReadOnly="True"
                        SelectionMode="Single"
                        SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat=d}" Width="100"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="100"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Controls Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button x:Name="AddIncomeButton" Content="Add Income" Padding="10,5" Margin="0,0,10,0"/>
            <Button x:Name="AddExpenseButton" Content="Add Expense" Padding="10,5" Margin="0,0,10,0"/>
            <Button x:Name="RemoveButton" Content="Remove Selected" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
